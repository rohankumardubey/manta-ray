private node color => __builtin__color {    
    @doc = "This is a color"
    input r;
    input g;
    input b;
}

public node texture {
    input filename;
    default output image;
    output file_size;
    output thing: color(10, 10, 10);

    color c(10, 10, 10);
}

texture thing(
    "thing.png"
)

// Instantiation
color_adder adder(
