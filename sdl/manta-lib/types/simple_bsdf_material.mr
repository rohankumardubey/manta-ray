private import "atomic_types.mr" as types
private import "conversions.mr"
private import "bsdf.mr"
private import "material_library.mr"
private import "material.mr"

public node simple_bsdf_material => __mantaray__simple_bsdf_material {
    input name          [types::string]: "";
    modify library      [material_library];
    input bsdf          [bsdf];
    input reflectance   [types::vector]: 1.0;
    input emission      [types::vector]: 0.0;

    alias output __out  [material];
}
